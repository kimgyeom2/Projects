<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--1.퍼미션 추가-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--원래 동적퍼미션도 해야함. 다만, 내위치기능(카카오꺼)을 사용하지만 않는다면 동적퍼미션이 없어도 지도는 보임-->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Ex68KakaoMap"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">
        <!--1-1 카카오지도가 http를 사용함. http를 사용하도록하는 퍼미션, 안드로이드는https씀-->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--2.네이티브앱키 추가-->
        <meta-data android:name="com.kakao.sdk.AppKey" android:value="048f80f02f119029058c5f51b01dc4a4"/>

    </application>

</manifest>